<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/green_fof7f6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15dp"
        android:layout_marginRight="@dimen/_15dp"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_15dp"
        android:paddingRight="@dimen/_15dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_to"
                android:textSize="@dimen/text_size_17"
                android:textColor="@color/black_333"
                />
            <TextView
                android:id="@+id/tv_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_333"
                android:textSize="@dimen/text_size_17"
                android:layout_marginLeft="@dimen/_5dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10dp"
            android:textColor="@color/grey_999"
            android:textSize="@dimen/text_size_15"
            />

        <View
            style="@style/divide_view_style"
            android:layout_marginTop="@dimen/_30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30dp"
            android:text="@string/payment_money"
            android:textColor="@color/black_333"
            android:textSize="@dimen/text_size_15"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/money_symbol"
                android:textColor="@color/black_333"
                android:textSize="@dimen/text_size_30"
                />

            <TextView
                android:id="@+id/tv_pay_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="number"
                android:maxLength="10"
                android:textCursorDrawable="@null"
                android:textSize="50sp"
                />
        </LinearLayout>

        <View
            style="@style/divide_view_style"
            android:layout_marginTop="@dimen/_10dp"
            />

        <TextView
            android:id="@+id/tv_confirm_payment"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_marginRight="@dimen/_15dp"
            android:layout_marginTop="@dimen/_20dp"
            android:background="@drawable/green_btn_pressed"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/confirm_payment"
            android:textColor="@color/white"
            android:textSize="15dp"/>


    </LinearLayout>


</LinearLayout>

