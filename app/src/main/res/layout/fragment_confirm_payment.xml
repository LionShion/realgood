<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48dp"
        android:paddingBottom="@dimen/_10dp"
        android:paddingTop="@dimen/_10dp"
        >

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10dp"
            android:padding="@dimen/_5dp"
            android:src="@mipmap/ic_close"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/confirm_payment"
            android:textColor="@color/black_333"
            android:textSize="@dimen/text_size_17"/>

    </RelativeLayout>

    <View style="@style/divide_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:paddingLeft="@dimen/_15dp"
        android:paddingRight="@dimen/_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_info"
            android:textColor="@color/grey_999"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/tv_order_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="3dp"
            android:text="xxx"
            android:textColor="@color/black_333"
            android:textSize="@dimen/text_size_15"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_choose_way"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/_15dp"
        android:paddingRight="@dimen/_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_way"
            android:textColor="@color/grey_999"
            android:textSize="@dimen/text_size_15"/>


        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrows_right"/>


        <TextView
            android:id="@+id/tv_pay_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="@string/balance"
            android:layout_toLeftOf="@id/image"
            android:textColor="@color/black_333"
            android:textSize="@dimen/text_size_15"/>

    </RelativeLayout>

    <View
        style="@style/divide_view"
        android:layout_marginTop="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/_15dp"
        android:paddingRight="@dimen/_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_money"
            android:textColor="@color/grey_999"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/tv_order_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="3dp"
            android:text="0.00"
            android:textColor="@color/black_333"
            android:textSize="@dimen/text_size_15"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/_15dp"
        android:paddingRight="@dimen/_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/privilege_money"
            android:textColor="@color/grey_999"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/tv_privilege_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="3dp"
            android:text="0.00"
            android:textColor="@color/red_ff2020"
            android:textSize="@dimen/text_size_15"/>


    </RelativeLayout>

    <View
        style="@style/divide_view"
        android:layout_marginTop="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/_15dp"
        android:paddingRight="@dimen/_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/payment"
            android:textColor="@color/black_333"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/tv_pay_amount_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="0.00"
            android:textColor="@color/black_333"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_pay_amount_money"
            android:text="@string/money_symbol"
            android:textSize="30sp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/_15dp"
        android:paddingRight="@dimen/_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/actually_pay_rmb"
            android:textColor="@color/black_333"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/tv_pay_rmb_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:text="0.00"
            android:textColor="@color/grey_666"
            android:textSize="@dimen/text_size_15"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_pay_rmb_money"
            android:text="@string/money_symbol_rmb"
            android:textSize="@dimen/text_size_15"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_confirm_payment"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/_15dp"
        android:layout_marginRight="@dimen/_15dp"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/btn_background_green"
        android:gravity="center"
        android:text="@string/confirm_payment"
        android:textColor="@color/white"
        android:textSize="15dp"/>


</LinearLayout>
