<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_bg"
    >

    <RelativeLayout
        android:layout_marginTop="@dimen/title_margin"
        android:id="@+id/frame_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/content_bg"
        >
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_nickname"
            style="@style/et_nickname"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tip_nickname_input"
        android:layout_below="@+id/frame_line"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tip_nickname_input"
        android:textColor="@color/editText_hint_color"
        />

    <TextView
        android:id="@+id/tv_nickname_commit"
        android:layout_below="@+id/tip_nickname_input"
        android:text="@string/commit"
        style="@style/bottom_tv_btn"
        android:background="@drawable/gray_btn_normal"
        />

</RelativeLayout>